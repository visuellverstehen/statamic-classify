{
  "name": "visuellverstehen/statamic-classify",
  "description": "A useful helper to add CSS classes to all HTML tags generated by the bard editor.",
  "keywords": [ "statamic", "addon", "bard", "css", "prose", "typography", "v3", "v4" ],
  "license": "proprietary",
  "type": "statamic-addon",
  "autoload": {
    "psr-4": {
      "VV\\Classify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VV\\Classify\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "visuellverstehen"
    }
  ],
  "support": {
    "email": "hello@visuellverstehen.de"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "illuminate/support": "^8.0 || ^9.0 || ^10.0",
    "statamic/cms": "^3.0.38 || ^4.0",
    "symfony/dom-crawler": "^5.4 || ^6.0",
    "symfony/css-selector": "^5.4 || ^6.0"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0 || ^7.0 || ^8 || ^9",
    "phpunit/phpunit": "^9.3 || ^10.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "extra": {
    "statamic": {
      "name": "Statamic Classify",
      "description": "A useful helper to add CSS classes to all HTML tags generated by the bard editor."
    },
    "laravel": {
      "providers": [
        "VV\\Classify\\ServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": false
    }
  }
}
